<div class="mt-3">
  <h2>サークル情報編集</h2>
</div>
<div class="form-group mt-3">
  <%= form_tag "/circles/#{@circle.id}", method: 'patch' do %>
    <div>
      <%= label_tag 'circle[name]', 'サークル名' %>
    </div>
    <div>
      <%= text_field_tag 'circle[name]', @circle.name, :class => 'form-control' %>
    </div>
    <div class="mt-3">
      <%= label_tag 'contents', '競技' %>
    </div>
    <div class="form-check">
      <div class="row">
        <% @contents.each_with_index do |content, index| %>
          <% if index == 0 %>
            <div class=col>
            <% elsif @contents.size / 2 == index - 1 %>
            </div>
            <div class=col>
            <% end %>
            <div>
              <% if @circle.contents.ids.include? content.id %>
                <%= check_box_tag 'content_ids[]', content.id, true, :id => 'content_checkbox_' + content.id.to_s, :class => 'form-check-input' %>
              <% else %>
                <%= check_box_tag 'content_ids[]', content.id, false, :id => 'content_checkbox_' + content.id.to_s, :class => 'form-check-input' %>
              <% end %>
              <%= label_tag 'content_checkbox_' + content.id.to_s, content.name, :class => 'form-check-label' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="mt-3">
      <%= label_tag 'circle[introduction]', '紹介文' %>
    </div>
    <div>
      <%= text_area_tag 'circle[introduction]', @circle.introduction, :class => 'form-control', :rows => 5 %>
    </div>
    <div class="mt-3">
      <%= label_tag 'circle[default_auto_reply_comment]', 'デフォルトのリプライ文' %>
    </div>
    <div>
      <%= text_area_tag 'circle[default_auto_reply_comment]', @circle.default_auto_reply_comment, :class => 'form-control', :rows => 5 %>
    </div>
    <div class="mt-3">
      <%= button_tag '編集', :class => 'btn btn-primary', :style => 'width: 100%;' %>
    </div>
  <% end %>
</div>
