<div class="mt-3">
  <h2><%= @circle.name %></h2>
</div>
<hr />
<div class="text-right">
<% @circle.contents.each do |content| %>
<span class="badge badge-primary"><%= content.name %></span>
<% end %>
</div>
<div class="mt-3">
  <%= image_tag 'https://via.placeholder.com/370x250' %>
</div>
<div class="mt-5">
  <h3>サークル紹介</h3>
  <hr />
  <p><%= simple_format(@circle.introduction) %></p>
</div>
<% if current_user == @circle.owner %>
<div class="mt-3">
      <%= button_tag 'サークル情報を編集', :class => 'btn btn-primary', :style => 'width: 100%;' %>
</div>
<% end %>
<div class="mt-5">
  <h3>活動予定</h3>
  <hr />
  <ul class="list-unstyled">
  <% @circle.activities.each do |activity| %>
    <li><%= link_to "#{activity.date} #{activity.content.name} @#{activity.place.name}", "/circles/#{@circle.id}/activities/#{activity.id}"  %></li>
  <% end %>
  </ul>
</div>
<% if current_user == @circle.owner %>
<div class="mt-3">
      <%= button_tag '活動予定を追加', :class => 'btn btn-primary', :style => 'width: 100%;' %>
</div>
<% end %>