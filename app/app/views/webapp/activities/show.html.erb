<div class="mt-3">
  <div class="row">
    <div class="col-4">
      <%= content_icon @activity.content.id %>
    </div>
    <div class="col-7">
      <h2 class="mt-5 ml-2" style="font-size: 140%"><%= @activity.content.name %></h2>
      <h3 class="mt-2 text-right font-weight-bold">in <%= @activity.place.city.prefecture.name %></h3>
    </div>
    <div class="col-1"></div>
  </div>
</div>
<div class="mt-5">
  <h3 class="font-weight-bold">詳細情報</h3>
</div>
<hr />
<table class="table show table-bordered">
  <tr>
    <th>日時</th>
    <td><%= l(@activity.date, format: :long) %>&nbsp;<%= l(@activity.start_time, format: :only_time)%>&nbsp;-&nbsp;<%= l(@activity.end_time, format: :only_time) %></td>
  </tr>
  <tr>
    <th>場所</th>
    <td>
      <div>
        <%= @activity.place.address %>(<%= @activity.place.name %>)
      </div>
      <div class="mt-2">
        <%= link_to "GoogleMapを開く", "", class: "btn btn-primary", style: "width: 100%;" %>
      </div>
    </td>
  </tr>
  <tr>
    <th>企画者</th>
    <td><%= link_to @activity.circle.name, "/circles/#{@activity.circle.id}" %></td>
  </tr>
</table>
<% if current_user.id == @activity.circle.owner.id %>
<div>
  <%= link_to "予定を編集する", "/circles/#{@activity.circle.id}/activities/#{@activity.id}/edit", class: "btn btn-primary", style: "width: 100%" %>
</div>
<div class="mt-3">
  <h3 class="font-weight-bold">チャット</h3>
  <hr />
</div>
<div class="mt-3" style="min-height: 50px;">
  <% if @activity.applications.size > 0 %>
    <table class="table">
      <% @activity.applications.each do |application| %>
        <tr>
          <div class="row">
            <div class="col-2">
              <% if application.user.picture_url.nil? %>
                <%= image_tag "icon_profile_no_image", size: "50x50", class: 'rounded-circle' %>
              <% else %>
                <%= image_tag application.user.picture_url, size: "50x50", class: 'rounded-circle' %>
              <% end %>
            </div>
            <div class="col-8">
              <div><%= application.user.display_name %></div>
              <div class="font-weight-light chat recently"><%= application.chats.where(speaker: :user).first.body %></div>
            </div>
            <div class="col-2">
              <span class="badge badge-success">1</span>
            </div>
          </div>
        </tr>
      <% end %>
    </table>
  <% else %>
  <p>問い合わせはまだありません</p>
  <% end %>
</div>
<% else %>
<% end %>
<div class="mt-3">
  <%= link_to "全員へメッセージを送る", "", class: "btn btn-primary", style: "width: 100%" %>
</div>
